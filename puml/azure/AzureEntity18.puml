' Styling
' ##################################

hide stereotype

!definelong AzureEntityColoring(e_stereo)
skinparam rectangle<<e_stereo>> {
    BackgroundColor AZURE_BG_COLOR
    BorderColor transparent
    Shadowing false
}
!enddefinelong

!define AZURE_PNG_ICON_SCALE 0.5

' Overwriting Elements
' ##################################

!function getAzureEntityDesc(e_alias, e_label, e_techn, e_color, e_sprite, e_stereo)
!return "<color:" + e_color + "><img:<$" + e_stereo + "_png>{scale=" + AZURE_PNG_ICON_SCALE + "}></color>\n\n==" + e_label + "<$" + e_stereo + "_png>//"
!endfunction

!definelong AzureEntity(e_alias, e_label, e_techn, e_color, e_sprite, e_stereo)
rectangle getAzureEntityDesc(e_alias, e_label, e_techn, e_color, e_sprite, e_stereo) <<e_stereo>> as e_alias
!enddefinelong

!definelong AzureEntity(e_alias, e_label, e_techn, e_descr, e_color, e_sprite, e_stereo)
rectangle getAzureEntityDesc(e_alias, e_label, e_techn, e_color, e_sprite, e_stereo) <<e_stereo>> as e_alias
!enddefinelong

