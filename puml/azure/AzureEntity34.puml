' Styling
' ##################################

hide stereotype

!definelong AzureEntityColoring(e_stereo)
skinparam rectangle<<e_stereo>> {
    BackgroundColor AZURE_BG_COLOR
    BorderColor transparent
    Shadowing false
}
!enddefinelong

!define AZURE_PNG_ICON_SCALE 0.5

' Overwriting Elements
' ##################################


!definelong AzureEntity(e_alias, e_label, e_techn, e_color, e_sprite, e_stereo)
!$e_image = $NBAzurePNG[e_stereo]
AzureEntity_ext(e_alias, e_label, e_techn, e_color, e_sprite, e_stereo,$e_image)
!enddefinelong

!define AzureEntity(e_alias, e_label, e_techn, e_descr, e_color, e_sprite, e_stereo) AzureEntity_ext(e_alias, e_label, e_techn, e_color, e_sprite, e_stereo,globals()[e_stereo + "_png"])


!definelong AzureEntity_ext(e_alias, e_label, e_techn, e_color, e_sprite, e_stereo,e_img)
rectangle "<color:e_color><img:e_img{scale=AZURE_PNG_ICON_SCALE}></color>\n\n==e_label-e_img" <<e_stereo>> as e_alias
!enddefinelong

